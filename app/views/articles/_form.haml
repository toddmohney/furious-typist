.article-form
  - if @article.errors.any?  #error_explanation
    %h2= "#{pluralize(@article.errors.count, 'error')} prohibited this article from being saved:"

    %ul
      = @article.errors.full_messages.each do |msg|
        %li= msg

  = simple_form_for(@article) do |f|
    = f.input :title
    = f.input :body
    = f.input :category, :value => @category_name
    = f.input :tags, :value => @article.get_tag_names
    = f.input :published

    .actions
      = f.button :submit, class: "btn-primary"
