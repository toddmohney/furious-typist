= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= pluralize(@user.errors.count, "error") 

      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    %br
    = f.text_field :username, :readonly => true
  .field
    = f.label :email
    %br
    = f.text_field :email, :readonly => true
  .field
    = f.label :is_email_validated
    %br
    = f.check_box :is_email_validated, :disabled => true
  .field
    = f.label :first_name 
    %br
    = f.text_field :first_name 
  .field
    = f.label :last_name
    %br
    = f.text_field :last_name 
  .field
    = f.label :is_enabled
    %br
    = f.check_box :is_enabled
  .field
    = f.label :is_deleted
    %br
    = f.check_box :is_deleted
  .actions
    = f.submit
